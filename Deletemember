    private void deleteActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_deleteActionPerformed
        // TODO add your handling code here:
        
            String SQL="DELETE from Member where Member_id='"+memberidtf.getText()+"'";
                 int retVal=DBOperations.UPDATE_Table(SQL);
                if(retVal==1){
                   JOptionPane.showMessageDialog(this, "Operation successfully completed","Member record deletion....",1);
                   this.dispose();
                }
                else{
                    JOptionPane.showMessageDialog(this, "Operation failed", "Member record deletion..", 1);
                    this.dispose();
                }
        
                
        
        
    }//GEN-LAST:event_deleteActionPerformed

