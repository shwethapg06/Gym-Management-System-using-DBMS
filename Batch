    private void saveActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_saveActionPerformed
        // TODO add your handling code here:
        if (save.getText().equals("Add")){
            batchidtf.setText("");
            starttimetf.setText("");
            finishtimetf.setText("");
           // batchtype.setText("");
            
            
           
            batchidtf.setEditable(true);
            starttimetf.setEditable(true);
            finishtimetf.setEditable(true);
           // batchtype.setEditable(true);
            
            

            save.setText("Save");
        }
        else{
            if( !batchidtf.getText().equals("") && !starttimetf.getText().equals("") && !finishtimetf.getText().equals("") && !batchtype.equals("")){
                String SQL="INSERT INTO Batch VALUES ('"+batchidtf.getText().trim()+"','" +starttimetf.getText().trim()+"','"+finishtimetf.getText().trim()+"','"+batchtype.trim()+"')";
                int retVal=DBOperations.UPDATE_Table(SQL);
                if(retVal==-1){
                   javax.swing.JOptionPane.showMessageDialog(this, "Operation Failed", "Member record insertion..", 1);
                   this.dispose();
                }
                else{
                    javax.swing.JOptionPane.showMessageDialog(this, "Operation successfully completed", "Member record insertion..", 1);
                    this.dispose();
                }
             batchidtf.setText("");
            starttimetf.setText("");
            finishtimetf.setText("");
            //batchtype.setText("");
            
            
                
                save.setText("Add");
                
             
            batchidtf.setEditable(false);
            starttimetf.setEditable(false);
            finishtimetf.setEditable(false);
            //batchtype.setEditable(false);
           
            
               

        }  
        }   
        
    }//GEN-LAST:event_saveActionPerformed

