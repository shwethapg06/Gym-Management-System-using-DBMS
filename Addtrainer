    private void saveActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_saveActionPerformed
        // TODO add your handling code here:
        if (save.getText().equals("Add")){
            fullnametf.setText("");
            traineridtf.setText("");
            batchidtf.setText("");
            //gendertf.setText("");
            agetf.setText("");
            contactnotf.setText("");
            emailidtf.setText("");
            addresstf.setText("");
            
            
            fullnametf.setEditable(true);
            traineridtf.setEditable(true);
            batchidtf.setEditable(true);
            //gendertf.setEditable(true);
            agetf.setEditable(true);
            contactnotf.setEditable(true);
            emailidtf.setEditable(true);
            addresstf.setEditable(true);
          

            save.setText("Save");
        }
        else{
            if( !fullnametf.getText().equals("") && !traineridtf.getText().equals("") && !batchidtf.getText().equals("") && !gendertf.equals("") && !agetf.getText().equals("") && !contactnotf.getText().equals("") && !emailidtf.getText().equals("") &&  !addresstf.getText().equals("")){
                String SQL="INSERT INTO Trainer VALUES ('"+fullnametf.getText().trim()+"','" +traineridtf.getText().trim()+"','"+batchidtf.getText().trim()+"','"+gendertf.trim()+"','"+agetf.getText().trim()+"','"+contactnotf.getText().trim()+"','"+emailidtf.getText().trim()+"','"+addresstf.getText().trim()+"')";
                int retVal=DBOperations.UPDATE_Table(SQL);
                if(retVal==-1){
                   JOptionPane.showMessageDialog(this, "Operation Failed", "Member record insertion..", 1);
                   this.dispose();
                }
                else{
                    JOptionPane.showMessageDialog(this, "Operation successfully completed", "Member record insertion..", 1);
                    this.dispose();
                }
            fullnametf.setText("");
            traineridtf.setText("");
            batchidtf.setText("");
           // gendertf.setText("");
            agetf.setText("");
            contactnotf.setText("");
            emailidtf.setText("");
            addresstf.setText("");
           
            
                
                save.setText("Add");
                
                fullnametf.setEditable(false);
            traineridtf.setEditable(false);
            batchidtf.setEditable(false);
            //gendertf.setEditable(false);
            agetf.setEditable(false);
            contactnotf.setEditable(false);
            emailidtf.setEditable(false);
            addresstf.setEditable(false);
            
               

        }  
        }
        
        
    }//GEN-LAST:event_saveActionPerformed

