    private void updateActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_updateActionPerformed
        // TODO add your handling code here:
        
         String SQL="UPDATE Member SET Full_name='"+fullnametf.getText()+"', Email_id='"+emailidtf.getText()+"', Contact_no='"+contactnotf.getText()+"', Address='"+addresstf.getText()+"' where Member_id='"+memberidtf.getText()+"'";
               int retVal=DBOperations.UPDATE_Table(SQL);
                if(retVal==1){
                   JOptionPane.showMessageDialog(this, "Operation successfully completed!!", "Member record insertion..", 1);
                   this.dispose();
                }
                else{
                    JOptionPane.showMessageDialog(this, "Operation failed!!", "Member record insertion..", 1);
                    this.dispose();
                }
            
    }//GEN-LAST:event_updateActionPerformed

