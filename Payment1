    private void saveActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_saveActionPerformed
        // TODO add your handling code here:
        if (save.getText().equals("Add")){
             memberidtf.setText("");
            feestf.setText("");
            doptf.setText("");
            ddtf.setText("");
            
            
            
           
            //memberidtf.setEditable(true);
            feestf.setEditable(true);
            doptf.setEditable(true);
            ddtf.setEditable(true);
            
            

            save.setText("Save");
        }
        else{
            if(!memberidtf.getText().equals("") && !feestf.getText().equals("") && !doptf.getText().equals("") && !ddtf.getText().equals("")){
                String SQL="INSERT INTO Payment VALUES ('"+memberidtf.getText().trim()+"','"+feestf.getText().trim()+"','"+doptf.getText().trim()+"','"+ddtf.getText().trim()+"')";
                int retVal=DBOperations.UPDATE_Table(SQL);
                if(retVal==-1){
                   javax.swing.JOptionPane.showMessageDialog(this, "Operation failed", "Member record insertion..", 1);
                   this.dispose();
                }
                else{
                    javax.swing.JOptionPane.showMessageDialog(this, "Operation successfully completed", "Member record insertion..", 1);
                    this.dispose();
                }
            memberidtf.setText("");
            feestf.setText("");
            doptf.setText("");
            ddtf.setText("");
            
            
                
                save.setText("Add");
                
             
            memberidtf.setEditable(false);
            feestf.setEditable(false);
            doptf.setEditable(false);
            ddtf.setEditable(false);
           
            
               

        }  
         
    }                                    

    
    }//GEN-LAST:event_saveActionPerformed

