    private void updateActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_updateActionPerformed
        // TODO add your handling code here:
        String SQL="UPDATE Payment SET Fees='"+feestf.getText()+"', Date_of_payment='"+doptf.getText()+"', Due_date='"+ddtf.getText()+"' where Member_id='"+idcombobox.getSelectedItem().toString()+"'";
               int retVal=DBOperations.UPDATE_Table(SQL);
                if(retVal==1){
                   JOptionPane.showMessageDialog(this, "Operation successfully completed!!", "Member record insertion..", 1);
                   this.dispose();
                }
                else{
                    JOptionPane.showMessageDialog(this, "Operation failed!!", "Member record insertion..", 1);
                    this.dispose();
                }
         
    }//GEN-LAST:event_updateActionPerformed

    private void viewActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_viewActionPerformed
        // TODO add your handling code here:
        String SQL = "CALL AmountPaid()";
                DBOperations.ShowDataInTable(DBOperations.CallableExecute(SQL),table, this);
    }//GEN-LAST:event_viewActionPerformed

    private void idcomboboxPopupMenuWillBecomeVisible(javax.swing.event.PopupMenuEvent evt) {//GEN-FIRST:event_idcomboboxPopupMenuWillBecomeVisible
        // TODO add your handling code here:
         String tmp=(String)idcombobox.getSelectedItem();
        String sql="select * from Payment";
        try{
            ResultSet rs=DBOperations.SEARCH_Table(sql);
            while(rs.next()){
                String Memberid=rs.getString("Member_id");
                idcombobox.addItem(Memberid);
                String Feestf=rs.getString("Fees");
                feestf.setText(Feestf);
               String DOPtf=rs.getString("Date_of_payment");
                doptf.setText(DOPtf);
                String DDtf=rs.getString("Due_date");
                ddtf.setText(DDtf);
                
            }
            
        }catch(Exception e)
                    {
                   
                    }
       
    }//GEN-LAST:event_idcomboboxPopupMenuWillBecomeVisible

