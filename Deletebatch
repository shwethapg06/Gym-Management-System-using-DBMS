    private void deleteActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_deleteActionPerformed
        // TODO add your handling code here:
        String SQL="DELETE from BATCH where Batch_id like '"+batchidtf.getText()+"'";
        int retVal=DBOperations.UPDATE_Table(SQL);
                if(retVal==1){
                   JOptionPane.showMessageDialog(this, "Operation successfully completed", "Batch record deletion..", 1);
                   this.dispose();
                }
                else{
                    JOptionPane.showMessageDialog(this, "Operation failed", "Batch record deletion..", 1);
                    this.dispose();
                }
                batchidtf.setText("");
    }//GEN-LAST:event_deleteActionPerformed

